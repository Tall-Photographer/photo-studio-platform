{
  "name": "shootlinks-v3",
  "version": "3.0.0",
  "description": "Photography Studio Management Platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "test": "npm run test --workspaces",
    "test:backend": "npm run test --workspace=packages/backend",
    "test:frontend": "npm run test --workspace=packages/frontend",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "npm run type-check --workspaces",
    "db:setup": "npm run db:setup --workspace=packages/backend",
    "db:migrate": "npm run db:migrate --workspace=packages/backend",
    "db:seed": "npm run db:seed --workspace=packages/backend",
    "db:reset": "npm run db:reset --workspace=packages/backend",
    "db:studio": "npm run db:studio --workspace=packages/backend",
    "start": "npm run start --workspace=packages/backend",
    "start:prod": "concurrently \"npm run start:prod:backend\" \"npm run start:prod:frontend\"",
    "start:prod:backend": "npm run start:prod --workspace=packages/backend",
    "start:prod:frontend": "npm run preview --workspace=packages/frontend",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist packages/*/build",
    "clean:install": "npm run clean && npm install",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/shootlinks-v3.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/shootlinks-v3/issues"
  },
  "homepage": "https://github.com/your-username/shootlinks-v3#readme",
  "keywords": [
    "photography",
    "studio-management",
    "saas",
    "booking-system",
    "react",
    "nodejs",
    "typescript",
    "postgresql"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "UNLICENSED",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}